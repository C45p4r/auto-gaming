# Copy to .env and adjust values
ENVIRONMENT=dev
LOG_LEVEL=INFO
LOGS_DIR=logs

# OCR (maximize text signal)
OCR_LANGUAGE=eng
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
OCR_PREPROCESS=sharpness
OCR_SCALE=2.0
OCR_PSM=7
OCR_OEM=3
OCR_MULTI_PASS=true
OCR_ENSEMBLE=true
OCR_ENGINES=paddle,tesseract_batched,tesseract

# Capture / Window (stable, user-specified position and size)
CAPTURE_FPS=2
CAPTURE_BACKEND=window
WINDOW_TITLE_HINT=Google Play Games|Epic Seven|Epic 7|Epic Seven - FRl3ZD
WINDOW_FORCE_FOREGROUND=true
WINDOW_ENFORCE_TOPMOST=true
WINDOW_LEFT=82
WINDOW_TOP=80
WINDOW_CLIENT_WIDTH=882
WINDOW_CLIENT_HEIGHT=496

# Input (enable real taps; base coords must match client area)
DRY_RUN=false
INPUT_BACKEND=window
INPUT_BASE_WIDTH=882
INPUT_BASE_HEIGHT=496
INPUT_EXCLUDE_BOTTOM_PX=40

# Reinforcement learning (bandit)
RL_ENABLED=true
RL_METHOD=bandit
RL_EPS_START=0.35
RL_EPS_END=0.15
RL_PERSIST_PATH=data/policy.json

# Stability
MAX_CONSEC_ERRORS=5
ERROR_BACKOFF_S=2.0

# Parallelism
PARALLEL_MODE=async

# Hugging Face / LLM
HUGGINGFACE_HUB_TOKEN=
HF_MODEL_ID_POLICY=
HF_MODEL_ID_JUDGE=
HF_INFERENCE_ENDPOINT_URL=
